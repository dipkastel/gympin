<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_3sdp"
    app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/img_user_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/sampleuser3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_options"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_star_black_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_like"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_star_black_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_content_description" />

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_star_black_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_content_description" />

        <ImageView
            android:id="@+id/img_comments"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_star_black_16dp"
            app:layout_constraintEnd_toStartOf="@+id/img_like"
            app:layout_constraintTop_toBottomOf="@+id/txt_content_description" />

        <ImageView
            android:id="@+id/img_post_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/_140sdp"
            android:src="@drawable/sample_baner"
            android:layout_marginTop="@dimen/_8sdp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_user_image" />

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans_bold"
            android:padding="@dimen/_3sdp"
            android:shadowColor="@color/black_copenhagen"
            android:text="چگونه دراز نشست صحیح برویم"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="@color/black_copenhagen"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@+id/img_user_image"
            app:layout_constraintTop_toTopOf="@+id/img_user_image" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_sans_bold"
            android:padding="@dimen/_3sdp"
            android:shadowColor="@color/grey_dim"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="چگونه دراز نشست صحیح برویم"
            android:textColor="@color/grey_dim"
            android:textSize="@dimen/_7sdp"
            app:layout_constraintStart_toEndOf="@+id/img_user_image"
            app:layout_constraintTop_toBottomOf="@+id/txt_user_name" />

        <TextView
            android:id="@+id/txt_content_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:fontFamily="@font/iran_sans_bold"
            android:padding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/_rectangle_radius_fill_lightred"
            android:text="چگونه دراز نشست صحیح برویم"
            android:textColor="@color/black_ciatel"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_post_image" />

        <TextView
            android:id="@+id/txt_content_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:fontFamily="@font/iran_sans_normal"
            android:padding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="چگونه دراز نشست صحیح برویم"
            android:textColor="@color/black_ciatel"
            android:textSize="@dimen/_7sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_content_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>