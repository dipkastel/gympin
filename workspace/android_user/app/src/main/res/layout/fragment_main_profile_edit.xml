<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white_Munsell"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_btn_update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_50sdp">

            <ImageView
                android:id="@+id/img_user_image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/placeholder_userprofile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lbl_user_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/iran_sans_normal"
                android:text="@string/mobile"
                android:textColor="@color/black_ciatel"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintStart_toStartOf="@+id/edt_mobile"
                app:layout_constraintTop_toBottomOf="@+id/img_user_image" />

            <EditText
                android:id="@+id/edt_mobile"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/_rectangle_radius_fill_grey"
                android:fontFamily="@font/iran_sans_bold"
                android:inputType="number"
                android:enabled="false"
                android:paddingHorizontal="@dimen/_20sdp"
                android:textColor="@color/grey_Davy"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_user_mobile" />


            <TextView
                android:id="@+id/lbl_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/iran_sans_normal"
                android:text="@string/user_name"
                android:textColor="@color/black_ciatel"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintStart_toStartOf="@+id/edt_mobile"
                app:layout_constraintTop_toBottomOf="@+id/edt_mobile" />

            <EditText
                android:id="@+id/edt_user_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/_rectangle_radius_fill_white"
                android:fontFamily="@font/iran_sans_bold"
                android:inputType="number"
                android:paddingHorizontal="@dimen/_20sdp"
                android:textColor="@color/grey_Davy"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_user_name" />

            <TextView
                android:id="@+id/lbl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/iran_sans_normal"
                android:text="@string/name"
                android:textColor="@color/black_ciatel"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintStart_toStartOf="@+id/edt_name"
                app:layout_constraintTop_toBottomOf="@+id/edt_user_name" />

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/_rectangle_radius_fill_white"
                android:fontFamily="@font/iran_sans_bold"
                android:inputType="textPersonName"
                android:paddingHorizontal="@dimen/_20sdp"
                android:textColor="@color/grey_Davy"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_name" />

            <TextView
                android:id="@+id/lbl_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/iran_sans_normal"
                android:text="@string/family_name"
                android:textColor="@color/black_ciatel"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintStart_toStartOf="@+id/edt_name"
                app:layout_constraintTop_toBottomOf="@+id/edt_name" />

            <EditText
                android:id="@+id/edt_last_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/_rectangle_radius_fill_white"
                android:fontFamily="@font/iran_sans_bold"
                android:inputType="textPersonName"
                android:paddingHorizontal="@dimen/_20sdp"
                android:textColor="@color/grey_Davy"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_last_name" />

            <TextView
                android:id="@+id/lbl_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/iran_sans_normal"
                android:text="@string/bio"
                android:textColor="@color/black_ciatel"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintStart_toStartOf="@+id/edt_bio"
                app:layout_constraintTop_toBottomOf="@+id/edt_last_name" />

            <EditText
                android:id="@+id/edt_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/_rectangle_radius_fill_white"
                android:fontFamily="@font/iran_sans_bold"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:lines="3"
                android:minLines="4"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:text="asd asd asd asd asd "
                android:textColor="@color/grey_Davy"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_bio" />

            <TextView
                android:id="@+id/lbl_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/iran_sans_normal"
                android:text="@string/birthday"
                android:textColor="@color/black_ciatel"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintStart_toStartOf="@+id/edt_bio"
                app:layout_constraintTop_toBottomOf="@+id/edt_bio" />

            <EditText
                android:id="@+id/edt_birthday"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/_rectangle_radius_fill_white"
                android:fontFamily="@font/iran_sans_bold"
                android:inputType="textPersonName"
                android:paddingHorizontal="@dimen/_20sdp"
                android:textColor="@color/grey_Davy"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_birthday" />

            <TextView
                android:id="@+id/lbl_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/iran_sans_normal"
                android:text="@string/email"
                android:textColor="@color/black_ciatel"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintStart_toStartOf="@+id/edt_email"
                app:layout_constraintTop_toBottomOf="@+id/edt_birthday" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/_rectangle_radius_fill_white"
                android:fontFamily="@font/iran_sans_bold"
                android:inputType="textPersonName"
                android:paddingHorizontal="@dimen/_20sdp"
                android:textColor="@color/grey_Davy"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_email" />

            <TextView
                android:id="@+id/lbl_national_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/iran_sans_normal"
                android:text="@string/national_code"
                android:textColor="@color/black_ciatel"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintStart_toStartOf="@+id/edt_national_code"
                app:layout_constraintTop_toBottomOf="@+id/edt_email" />

            <EditText
                android:id="@+id/edt_national_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/_rectangle_radius_fill_white"
                android:fontFamily="@font/iran_sans_bold"
                android:inputType="textPersonName"
                android:paddingHorizontal="@dimen/_20sdp"
                android:textColor="@color/grey_Davy"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_national_code" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <TextView
        android:id="@+id/txt_btn_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@color/cyan_light"
        android:fontFamily="@font/iran_sans_bold"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white_london"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
