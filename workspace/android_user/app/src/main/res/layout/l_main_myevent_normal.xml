<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_3sdp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/cl_share"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_owner_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_creator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_bold"
                android:text="@string/text_placeholder"
                android:textColor="@color/black_Bistre"
                android:textSize="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="@+id/img_owner_image"
                app:layout_constraintStart_toStartOf="@+id/img_owner_image"
                app:layout_constraintTop_toBottomOf="@+id/img_owner_image" />

            <TextView
                android:id="@+id/txt_event_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/iran_sans_bold"
                android:text="@string/text_placeholder"
                android:textAlignment="viewStart"
                android:textColor="@color/black_Bistre"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toStartOf="@+id/img_event_is_mine"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_owner_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_event_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/iran_sans_normal"
                android:maxLines="3"
                android:text="@string/text_placeholder"
                android:textAlignment="viewStart"
                android:textColor="@color/grey_Slate"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_owner_image"
                app:layout_constraintTop_toBottomOf="@+id/txt_event_name" />

            <ImageView
                android:id="@+id/img_event_is_mine"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_margin="@dimen/_2sdp"
                android:src="@drawable/ic_star_black_active_16dp"
                android:tint="#FFC800"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/orange_paris" />

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/rb_user_rate"
                android:layout_width="0dp"
                android:layout_height="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/img_owner_image"
                app:layout_constraintStart_toStartOf="@+id/img_owner_image"
                app:layout_constraintTop_toBottomOf="@+id/txt_creator_name"
                app:layout_constraintVertical_bias="0"
                app:srb_clearRatingEnabled="true"
                app:srb_clickable="false"
                app:srb_drawableEmpty="@drawable/ico_rate_star_deactive"
                app:srb_drawableFilled="@drawable/ico_rate_star_active"
                app:srb_numStars="5"
                app:srb_scrollable="false"
                app:srb_starHeight="@dimen/_12sdp"
                app:srb_starPadding="0dp"
                app:srb_starWidth="@dimen/_12sdp"
                app:srb_stepSize="0.1" />

            <com.notrika.gympin.util.component.CuserList
                android:id="@+id/cl_user_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rb_user_rate"
                app:layout_constraintTop_toBottomOf="@+id/txt_event_desc" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <com.notrika.gympin.util.component.CseekbarEvents
            android:id="@+id/bar_event_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_data" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cl_share"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bar_event_time">
            <TextView
                android:id="@+id/txt_event_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_normal"
                android:text="@string/text_placeholder"
                android:textColor="@color/grey_aurometalsaurus"
                android:textSize="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_event_address"
                app:layout_constraintHorizontal_chainStyle="packed" />

            <ImageView
                android:id="@+id/img_event_address"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:src="@drawable/ico_loc"
                android:tint="@color/Red_gympin"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txt_event_date"
                app:layout_constraintStart_toEndOf="@+id/txt_event_address" />

            <TextView
                android:id="@+id/txt_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_normal"
                android:text="@string/text_placeholder"
                android:textColor="@color/grey_aurometalsaurus"
                android:textSize="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_event_date"
                app:layout_constraintStart_toEndOf="@+id/img_event_address" />

            <ImageView
                android:id="@+id/img_event_date"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:src="@drawable/ico_date"
                android:tint="@color/Red_gympin"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txt_event_time"
                app:layout_constraintStart_toEndOf="@+id/txt_event_date" />

            <TextView
                android:id="@+id/txt_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iran_sans_normal"
                android:text="@string/text_placeholder"
                android:textColor="@color/grey_aurometalsaurus"
                android:textSize="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_event_time"
                app:layout_constraintStart_toEndOf="@+id/img_event_date" />

            <ImageView
                android:id="@+id/img_event_time"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:src="@drawable/ico_time"
                android:tint="@color/Red_gympin"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_event_time" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_share"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@color/white_Ghost"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="-50dp"
                android:layout_marginRight="-50dp"
                android:fontFamily="@font/iran_sans_normal"
                android:gravity="center"
                android:lines="1"
                android:rotation="270"
                android:text="@string/please_share"
                android:textAlignment="center"
                android:textColor="@color/grey_Liver"
                android:textSize="@dimen/_9sdp"
                android:padding="@dimen/_3sdp"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="•••"
                android:textAlignment="center"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>