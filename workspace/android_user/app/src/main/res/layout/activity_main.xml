<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    tools:context=".ui.main.ActivityMain">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_london">

                <Button
                    android:id="@+id/btn_user_profile"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/ico_user_profile"
                    android:layout_margin="@dimen/_8sdp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ico_options_setting"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    style="@style/main_appbar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/actionBarSize"
                    app:layout_constraintEnd_toStartOf="@id/btn_user_profile"
                    app:layout_constraintStart_toEndOf="@id/btn_setting"
                    app:layout_constraintTop_toTopOf="parent"
                    app:title="@string/text_placeholder"
                    app:titleCentered="true" />

                <Button
                    android:id="@+id/btn_setting"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/ico_options_setting"
                    android:layout_margin="@dimen/_8sdp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/appBarLayout_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_alignBottom="@+id/nav_host_fragment_main"
        android:background="@color/white_manchester"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <fragment
        android:id="@+id/nav_host_fragment_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@+id/bottom_nav"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout_shadow"
        app:navGraph="@navigation/main" />

    <View
        android:id="@+id/bottom_nav_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_alignBottom="@+id/nav_host_fragment_main"
        android:background="@color/white_manchester"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        android:theme="@style/Widget.BottomNavigationView"
        app:itemBackground="@color/white_london"
        app:itemHorizontalTranslationEnabled="false"
        app:itemTextColor="@color/bottom_navigation_text_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/main_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>