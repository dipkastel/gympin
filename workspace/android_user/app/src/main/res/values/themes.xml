<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Register part main theme. -->
    <style name="Theme.Register" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Original AppCompat attributes. -->
        <item name="colorSecondary">@color/red_amaranth</item>
        <item name="android:colorBackground">@color/black_copenhagen</item>
        <item name="colorError">@color/red_amaranth</item>
        <item name="colorPrimary">@color/black_copenhagen</item>
        <item name="colorPrimaryDark">@color/black_Bistre</item>
        <item name="colorAccent">@color/black_copenhagen</item>

        <!-- New MaterialComponents attributes. -->
        <item name="colorPrimaryVariant">@color/blue_dodger</item>
        <item name="colorSecondaryVariant">@color/blue_dodger</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="strokeColor">@color/black_copenhagen</item>
        <item name="android:textColor">@color/black_copenhagen</item>
        <item name="strokeWidth">@dimen/_1sdp</item>

    </style>
    <!-- styles -->

    <!-- main part main theme. -->
    <style name="Theme.Main" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/grey_Ash</item>
        <item name="colorAccent">@color/black_Bistre</item>
        <item name="colorPrimaryDark">@color/white_Gainsboro</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:colorPrimary" >@color/colorPrimary</item>
        <!-- Original AppCompat attributes. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <!-- styles. -->
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/iran_sans_normal</item>
        <item name="android:textSize">@dimen/_6sdp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="main_appbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/white_london</item>
        <item name="titleTextColor">@color/grey_dim</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/white_london</item>
    </style>



</resources>