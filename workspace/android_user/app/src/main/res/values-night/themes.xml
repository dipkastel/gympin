<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Register part main theme. -->
    <style name="Theme.Register" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_kalahari</item>
        <item name="colorPrimaryDark">@color/purple_dallas</item>
        <item name="colorAccent">@color/grey_dark</item>
    </style>
    <!-- styles -->
    <style name="Register.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft">@dimen/_16sdp</item>
        <item name="android:paddingRight">@dimen/_16sdp</item>
        <item name="strokeColor">@color/white_Munsell</item>
        <item name="background">@color/bTransparent00</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
    </style>
    <style name="Register.Input.Layout" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft">@dimen/_16sdp</item>
        <item name="android:paddingRight">@dimen/_16sdp</item>
        <item name="strokeColor">@color/white_Munsell</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
    </style>

    <!-- main part main theme. -->
    <style name="Theme.Main" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/grey_Ash</item>
        <item name="colorAccent">@color/black_Bistre</item>
        <item name="colorPrimaryDark">@color/white_Gainsboro</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:colorPrimary" >@color/grey_Davy</item>
        <item name="android:statusBarColor">@color/white_Gainsboro</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- styles. -->
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textSize">@dimen/_6sdp</item>
    </style>




</resources>