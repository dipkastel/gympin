<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    app:startDestination="@id/fragmentSplash">

    <fragment
        android:id="@+id/fragmentSplash"
        android:name="com.notrika.gympin.ui.register.splash.FragmentSplash"
        android:label="FragmentSplash"
        tools:layout="@layout/fragment_register_splash">
        <action
            android:id="@+id/splash_to_login"
            app:destination="@id/fragmentLogin" />
    </fragment>
    <fragment
        android:id="@+id/fragmentLogin"
        android:name="com.notrika.gympin.ui.register.login.FragmentLogin"
        android:label="FragmentLogin"
        tools:layout="@layout/fragment_register_login"/>
</navigation>